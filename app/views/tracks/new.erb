<h1>Add a track</h1>

<% if @track.errors.any? %>
	<div>
		<strong>Some issues with your track, please fix them:</strong>
		<ul>
			<% @track.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<form method="post" action="/tracks">
  <div class="form-group">
    <label class="col-sm-2 control-label">Song Title:</label>
    <div class="col-sm-10">
      <input type="text" name="song_title" class="form-control" value="<%= @track.song_title %>">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Artist:</label>
    <div class="col-sm-10">
      <input type="text" name="author" class="form-control" value="<%= @track.author %>">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Link to video or track:</label>
    <div class="col-sm-10">
      <input type="text" name="url" class="form-control" value="<%= @track.url %>">
    </div>
  </div>
 	<div class="form-group">
 		<div class="col-sm-10">
      <input type="submit" value="Add track">
    </div>
  </div>
</form>

<div class="col-sm-10">
  <hr/>
  <span><i class="fa fa-play"></i></span> <a href="/">Return home</a>
</div>