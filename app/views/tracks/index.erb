<section id="wall" class="container content-section text-center">
  <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
          <h1>MUSIC WALL</h1>
					<% @tracks.each do |track| %>
            <form method="post" action="/tracks/<%= track.id %>/delete">
  						<div class="track">
  							<h3><%= track.song_title %> <small>// <%= track.author %>
                  <a href="<%= track.url %>" target="_blank"> <i class="fa fa-play-circle"></i></a> /
                    <a href="#DeletePrompt" class="portfolio-link" data-toggle="modal"><i class="fa fa-trash-o"></i></a>
                </small>
  						</div>
  					<% end %>
			</div>
	</div>
</section>

<section id="add" class="content-section text-center">
  <div class="download-section">
      <div class="container">
          <div class="col-lg-8 col-lg-offset-2">
              <h2>Add a track</h2>
              <a href="/tracks/new"><i class="fa fa-plus fa-3x"></i></a>
          </div>
      </div>
  </div>
</section>

<!-- jQuery -->
<script src="/js/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="/js/bootstrap.min.js"></script>

<!-- Plugin JavaScript -->
<script src="/js/jquery.easing.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="/js/musicwall.js"></script>



<div class="portfolio-modal modal fade" id="DeletePrompt" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-content">
    <div class="close-modal" data-dismiss="modal">
      <div class="lr">
        <div class="rl">
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
          <div class="modal-body">
            <h1>Are you sure you want to delete this track?</h1>
            <input type="submit" value="YES">
            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> cancel</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</form>